        <TextBox x:Name="txtTipPaketa" HorizontalAlignment="Left" Margin="147,157,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="txtOpis" HorizontalAlignment="Left" Margin="132,199,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="txtPopust" HorizontalAlignment="Left" Margin="132,241,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
